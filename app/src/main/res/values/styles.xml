<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="divider">@color/divider</item>
        <item name="android:buttonStyle">@style/Buttons</item>
        <item name="android:textViewStyle">@style/Text</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Large">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="Text.Large.Tablet">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Text.Small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Text.Small.Tablet">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Text.Medium.EditProfile">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Text.Medium.EditProfile.Tablet">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Small.EditProfile">
        <item name="android:layout_marginBottom">@dimen/vertical_mini_margin</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Text.Small.EditProfile.Tablet">
        <item name="android:layout_marginBottom">@dimen/vertical_mini_margin_large</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.buttonTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Text.buttonTextStyle.Tablet">
        <item name="android:textSize">34sp</item>
        <item name="android:layout_marginBottom">@dimen/vertical_mini_margin_large</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Text.titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.titleStyle.Large">
        <item name="android:layout_marginTop">124dp</item>
        <item name="android:textSize">112sp</item>
    </style>

    <style name="Text.SenderText">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.SenderText.Left">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="Text.SenderText.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="Text.ChatText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.ChatText.Right">
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.ChatText.Left">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Text.DateText">
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.DateText.Right">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">2dp</item>
    </style>

    <style name="Text.DateText.Left">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="Buttons">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
    </style>

    <style name="Buttons.Search">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/vertical_mini_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Buttons.Search.Accept">
        <item name="android:layout_marginRight">@dimen/horizontal_mini_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_mini_margin</item>
        <item name="android:background">@drawable/accept_button</item>
    </style>

    <style name="Buttons.Search.Accept.Tablet">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_large</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Buttons.Search.Reject">
        <item name="android:layout_marginLeft">@dimen/horizontal_mini_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_mini_margin</item>
        <item name="android:background">@drawable/reject_button</item>
    </style>

    <style name="Buttons.Search.Reject.Tablet">
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin_large</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Buttons.Left">
        <item name="android:layout_marginRight">@dimen/horizontal_mini_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_mini_margin</item>
    </style>

    <style name="Buttons.Left.Tablet">
        <item name="android:layout_marginRight">@dimen/horizontal_mini_margin_large</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_mini_margin_large</item>
        <item name="android:layout_marginLeft">@dimen/keyline_2_large</item>
        <item name="android:layout_marginStart">@dimen/keyline_2_large</item>
        <item name="android:layout_height">match_parent</item><item name="android:layout_marginBottom">@dimen/keyline_2</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
    </style>

    <style name="Buttons.Right">
        <item name="android:layout_marginLeft">@dimen/horizontal_mini_margin</item>
        <item name="android:layout_marginStart">@dimen/horizontal_mini_margin</item>
    </style>

    <style name="Buttons.Right.Tablet">
        <item name="android:layout_marginLeft">@dimen/horizontal_mini_margin_large</item>
        <item name="android:layout_marginStart">@dimen/horizontal_mini_margin_large</item>
        <item name="android:layout_marginRight">@dimen/keyline_2_large</item>
        <item name="android:layout_marginEnd">@dimen/keyline_2_large</item>
        <item name="android:layout_marginBottom">@dimen/keyline_2</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Buttons.Send">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Buttons.facebookButton">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Buttons.facebookButton.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin_large</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_large</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="Buttons.Chat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_centerVertical">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Buttons.OnBoard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/vertical_mini_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans_serif_thin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Buttons.OnBoard.Tablet">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FloatingAction">
        <item name="android:layout_width">@dimen/floating_action_button_radius</item>
        <item name="android:layout_height">@dimen/floating_action_button_radius</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/floating_action_button</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">2dp</item>
    </style>

    <style name="buttomImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/vertical_mini_margin</item>
    </style>

    <style name="buttomImageStyle.Tablet">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SpaceStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="EditProfBoxStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingTop">@dimen/vertical_mini_margin</item>
        <item name="android:paddingLeft">@dimen/horizontal_mini_margin</item>
        <item name="android:paddingRight">@dimen/horizontal_mini_margin</item>
        <item name="android:paddingBottom">@dimen/vertical_mini_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
    </style>

    <style name="EditProfBoxStyle.Tablet">
        <item name="android:paddingTop">@dimen/vertical_mini_margin_large</item>
        <item name="android:paddingLeft">@dimen/horizontal_mini_margin_large</item>
        <item name="android:paddingRight">@dimen/horizontal_mini_margin_large</item>
        <item name="android:paddingBottom">@dimen/vertical_mini_margin_large</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin_large</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
