<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="56dp">

    <ImageView
        android:id="@+id/profImage"
        android:layout_width="@dimen/adapter_image_view_diameter"
        android:layout_height="@dimen/adapter_image_view_diameter"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/nameField"
        android:text=""
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_2"
        android:paddingTop="@dimen/adapter_text_padding_top"
        android:paddingBottom="@dimen/adapter_text_padding_bottom"/>

</RelativeLayout>