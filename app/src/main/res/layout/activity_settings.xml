<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.richluick.android.roomie.ui.activities.SettingsActivity">

    <TextView
        android:id="@+id/discoveryText"
        android:text="@string/preference_discovery"
        android:layout_alignParentTop="true"
        style="@style/Text.Small.EditProfile" />

    <RelativeLayout
        android:id="@+id/genderLayout"
        android:layout_below="@+id/discoveryText"
        style="@style/EditProfBoxStyle">

        <TextView
            android:id="@+id/discoveryPref"
            android:text="@string/choice_male"
            style="@style/Text.Medium.EditProfile"
            android:layout_centerVertical="true"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" >

            <com.richluick.android.roomie.ui.widgets.ToggleableRadioButton
                android:id="@+id/discoveryCheckBox"
                style="@android:style/Widget.CompoundButton.CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </RelativeLayout>

</RelativeLayout>
