<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="1dp"
    android:translationZ="1dp"
    android:background="@android:color/white"
    tools:context="com.richluick.android.roomie.ui.fragments.RoomieFragment">

    <ImageView
        android:id="@+id/profImage"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="@dimen/vertical_mini_margin_large"/>

    <TextView
        android:id="@+id/nameField"
        android:text=""
        android:layout_below="@+id/profImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/vertical_mini_margin_large"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginStart="@dimen/activity_horizontal_margin_large"
        style="@style/Text.Large.Tablet"/>

    <TextView
        android:id="@+id/locationText"
        android:text="@string/roomie_looking_in"
        android:textStyle="bold"
        android:layout_below="@+id/nameField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginStart="@dimen/activity_horizontal_margin_large"
        style="@style/Text.Small.Tablet"/>

    <TextView
        android:id="@+id/locationField"
        android:text=""
        android:layout_below="@+id/nameField"
        android:layout_toRightOf="@+id/locationText"
        android:layout_toEndOf="@+id/locationText"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_large"
        style="@style/Text.Small.Tablet"/>

    <TextView
        android:id="@+id/hasRoomText"
        android:text="@string/roomie_text_has_room"
        android:textStyle="bold"
        android:layout_below="@+id/locationField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginStart="@dimen/activity_horizontal_margin_large"
        style="@style/Text.Small.Tablet"/>

    <TextView
        android:id="@+id/hasRoomField"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/locationField"
        android:layout_toRightOf="@+id/hasRoomText"
        android:layout_toEndOf="@+id/hasRoomText"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_large"
        style="@style/Text.Small.Tablet"/>

    <TextView
        android:id="@+id/aboutMeText"
        android:text=""
        android:textStyle="bold"
        android:layout_below="@+id/hasRoomText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/vertical_mini_margin_large"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginStart="@dimen/activity_horizontal_margin_large"
        style="@style/Text.Small.Tablet"/>

    <TextView
        android:id="@+id/aboutMeField"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/aboutMeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:layout_marginStart="@dimen/activity_horizontal_margin_large"
        android:layout_marginRight="@dimen/activity_horizontal_margin_large"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_large"
        android:layout_marginBottom="@dimen/activity_vertical_margin_large"
        style="@style/Text.Small.Tablet"/>

</RelativeLayout>
