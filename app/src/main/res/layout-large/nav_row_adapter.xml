<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/nav_button">


    <ImageView
        android:id="@+id/rowIcon"
        android:src="@drawable/ic_action_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_large"
        android:contentDescription="@string/desc_nav_icon" />

    <TextView
        android:id="@+id/rowText"
        android:text="asdassad"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/keyline_2_large"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/accent"/>

</FrameLayout>